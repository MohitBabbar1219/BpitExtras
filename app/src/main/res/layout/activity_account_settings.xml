<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackgroundColor"
    tools:context="com.mydarkappfactory.bpitextracurriculars.AccountSettingsActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar_account_settings"
        android:background="@color/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/toolbar_account_settings"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:id="@+id/nameCard"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="15dp"
                    android:background="@color/cardColor"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColor"
                        android:id="@+id/dascdsfasd"
                        android:layout_marginStart="20dp"
                        android:textSize="22sp"
                        android:text="Name"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/dascdsfasd"
                        android:textColor="@color/textColor"
                        android:textSize="18sp"
                        android:id="@+id/nameTextView"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="5dp"
                        android:text="******"/>


                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:id="@+id/enrollmentNumberCard"
                android:layout_below="@id/nameCard"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="15dp"
                    android:background="@color/cardColor"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColor"
                        android:id="@+id/oirwjeiodsa"
                        android:layout_marginStart="20dp"
                        android:textSize="22sp"
                        android:text="Enrollment Number"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/oirwjeiodsa"
                        android:textColor="@color/textColor"
                        android:textSize="18sp"
                        android:id="@+id/enrollmentNumberTextView"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="5dp"
                        android:text="******"/>


                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:id="@+id/passwordCard"
                android:layout_below="@id/enrollmentNumberCard"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="15dp"
                    android:background="@color/cardColor"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColor"
                        android:id="@+id/lkdmfsaddsa"
                        android:layout_marginStart="20dp"
                        android:textSize="22sp"
                        android:text="Password"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lkdmfsaddsa"
                        android:textColor="@color/textColor"
                        android:textSize="18sp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="5dp"
                        android:text="******"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change Password"
                        android:onClick="changePasswordRequest"
                        android:textColor="@color/textColor"
                        android:background="@color/cardColor"
                        android:layout_alignParentEnd="true"/>


                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:id="@+id/emailCard"
                android:layout_below="@id/passwordCard"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="15dp"
                    android:background="@color/cardColor"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColor"
                        android:id="@+id/opkfed"
                        android:layout_marginStart="20dp"
                        android:textSize="22sp"
                        android:text="Email Id"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/opkfed"
                        android:textColor="@color/textColor"
                        android:textSize="18sp"
                        android:id="@+id/emailTextView"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="5dp"
                        android:text="******"/>


                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:id="@+id/phoneNumberCard"
                android:layout_below="@id/emailCard"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="15dp"
                    android:background="@color/cardColor"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColor"
                        android:id="@+id/nfvejs"
                        android:layout_marginStart="20dp"
                        android:textSize="22sp"
                        android:text="Mobile Number"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/nfvejs"
                        android:textColor="@color/textColor"
                        android:textSize="18sp"
                        android:id="@+id/phoneNumberTextView"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="5dp"
                        android:text="******"/>


                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:id="@+id/signOutCard"
                android:onClick="attemptLogOut"
                android:layout_below="@id/phoneNumberCard"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="15dp"
                    android:background="@color/cardColor"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/psamacsxas"
                        android:src="@drawable/logout"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColor"
                        android:id="@+id/odqkmas"
                        android:layout_toEndOf="@id/psamacsxas"
                        android:layout_marginStart="20dp"
                        android:textSize="22sp"
                        android:text="Sign Out"/>


                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </ScrollView>



</RelativeLayout>
