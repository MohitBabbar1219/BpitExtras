<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@color/appBackgroundColor"
    tools:context="com.mydarkappfactory.bpitextracurriculars.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/kjasnkdjnas"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:id="@+id/hgfeahwz"
        android:layout_marginTop="30dp"
        android:background="@color/toolbarColor"
        android:layout_below="@id/kjasnkdjnas">

        <EditText
            android:layout_width="match_parent"
            android:background="@color/statusBarColor"
            android:padding="10dp"
            android:textColorHint="@color/logoColor"
            android:hint="Enrollment number..."
            android:inputType="number"
            android:id="@+id/email_edttxt"
            android:textColor="@color/textColor"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="match_parent"
            android:background="@color/statusBarColor"
            android:padding="10dp"
            android:layout_below="@id/email_edttxt"
            android:textColorHint="@color/logoColor"
            android:hint="Password..."
            android:textColor="@color/textColor"
            android:layout_marginTop="8dp"
            android:inputType="textPassword"
            android:id="@+id/password_edttxt"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:onClick="attemptLogin"
            android:id="@+id/login_button"
            android:textColor="@color/statusBarColor"
            android:layout_marginTop="10dp"
            android:layout_below="@id/password_edttxt"
            android:background="@color/logoColor"/>

    </RelativeLayout>



</RelativeLayout>
